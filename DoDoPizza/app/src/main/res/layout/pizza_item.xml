<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pizza_image"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pizza_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/pizza_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/pizza_image"
        app:layout_constraintTop_toTopOf="@id/pizza_image"
        android:text="2 пиццы и напиток"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/pizza_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2 пиццы 25 см и напиток на выбор. Для компании из 2-4 человек"
        app:layout_constraintLeft_toLeftOf="@id/pizza_name"
        app:layout_constraintTop_toBottomOf="@id/pizza_name"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:background="@drawable/custom_shape_cheked"
        android:id="@+id/picca_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/pizza_about"
        app:layout_constraintTop_toBottomOf="@id/pizza_about"
        android:layout_marginTop="20dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="15dp"
        android:text="106 TJS"
        android:textColor="@color/orange_dark"
        android:textSize="16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>