<?xml version="1.0" encoding="utf-8"?>
<resources>
    //For information text
    <style name="Widget.Words.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    //For title of Scroll View
    <style name="Widget.ProSkills.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Photos style
    <style name="Widget.ProSkills.Photos" parent="Widget.Material3.MaterialTimePicker.ImageButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>