<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parent_rv"
        tools:listitem="@layout/nested_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:background="@color/red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomAppBar">

        <androidx.cardview.widget.CardView
            android:id="@+id/musicPlayerPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="50dp">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/forspotifyapp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:id="@+id/musicPlayerText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="401.1 Retribution"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@+id/musicPlayerPhoto"
            app:layout_constraintTop_toTopOf="@id/musicPlayerPhoto"/>

        <TextView
            android:id="@+id/musicPlayerText2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mac Quayle"
            android:textColor="@color/grey"
            app:layout_constraintLeft_toLeftOf="@+id/musicPlayerText1"
            app:layout_constraintTop_toBottomOf="@id/musicPlayerText1"/>

        <ImageView
            android:id="@+id/musicPlayerPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_play"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/musicPlayerText1"
            />

        <ImageView
            android:id="@+id/musicPlayerDevice"
            android:layout_marginTop="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="@+id/musicPlayerPlay"
            app:layout_constraintRight_toLeftOf="@+id/musicPlayerPlay"
            android:src="@drawable/ic_device"
            />


        <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/line16"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/grey"
            />
        <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/line17"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/white"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_primary_dark"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>