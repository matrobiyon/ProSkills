<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/storyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp">


        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/storyPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatarka"
            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/storyText"
        app:layout_constraintTop_toBottomOf="@+id/storyCardView"
        app:layout_constraintLeft_toLeftOf="@+id/storyCardView"
        app:layout_constraintRight_toRightOf="@+id/storyCardView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="User Name"
        android:layout_below="@+id/storyCardView"
        android:gravity="center_horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>