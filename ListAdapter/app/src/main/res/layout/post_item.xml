<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/postIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/usersPostAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatarka"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/postUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toRightOf="@+id/postIcon"
            android:text="user name here"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_margin="3dp"
            android:textSize="11sp"
            android:text="something here "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/postIcon"
            android:layout_below="@+id/postUserName"/>

        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add"/>
    </RelativeLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/likeItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_like" />
        <ImageView
            android:layout_margin="4dp"
            android:src="@drawable/ic_comments"
            android:id="@+id/commentItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/likeItem"/>

        <ImageView
            android:id="@+id/shareItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/commentItem"
            android:src="@drawable/ic_share" />
        <ImageView
            android:layout_marginEnd="10dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_save"
            android:id="@+id/saveItem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>