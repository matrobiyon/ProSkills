<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/blue">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Студенты"
        android:textAllCaps="true"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/containerForHomePage"/>

    <ImageView
        android:id="@+id/titlePicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_book"
        app:layout_constraintRight_toLeftOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"

        />

    <ScrollView
        android:id="@+id/containerForHomePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/addNewStudent"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Имя"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/registration"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/registration" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Фамилия"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/otchestvo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Отчество"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/surname" />

            <FrameLayout
                android:id="@+id/genderContainerM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_background_all"
                android:padding="20dp"
                app:layout_constraintLeft_toLeftOf="@id/otchestvo"
                app:layout_constraintTop_toBottomOf="@+id/otchestvo">

                <TextView
                    android:id="@+id/genderM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="М"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/genderContainerJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_background_all"
                android:padding="20dp"
                app:layout_constraintRight_toRightOf="@id/otchestvo"
                app:layout_constraintTop_toBottomOf="@+id/otchestvo">

                <TextView
                    android:id="@+id/genderJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ж"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Возраст"
                android:inputType="number"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/genderContainerM" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Университет"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/age" />

            <EditText
                android:id="@+id/course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Курс"
                android:inputType="number"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/university" />

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/facultet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Факультет"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/course" />
            <EditText
                android:id="@+id/stipendiya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_stroke_blue"
                android:hint="Стипендия"
                android:inputType="number"
                android:padding="8dp"
                android:textColorHint="@color/blue"
                app:layout_constraintLeft_toLeftOf="@+id/name"
                app:layout_constraintRight_toRightOf="@id/name"
                app:layout_constraintTop_toBottomOf="@+id/facultet" />

            <FrameLayout
                android:id="@+id/containerSubmitRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_background_all"
                android:padding="20dp"
                app:layout_constraintLeft_toLeftOf="@id/stipendiya"
                app:layout_constraintRight_toRightOf="@id/stipendiya"
                app:layout_constraintTop_toBottomOf="@+id/stipendiya"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/submitRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Подтвердить"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>