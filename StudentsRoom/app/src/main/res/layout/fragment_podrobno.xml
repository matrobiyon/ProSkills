<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PodrobnoFragment"
    android:background="@drawable/rounded_background_top_margined"
    android:id="@+id/containerForHomePage">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:id="@+id/avatarka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/student" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/avatarka"
        app:layout_constraintTop_toTopOf="@id/avatarka"
        android:text="Matrobiyon Qosim"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:id="@+id/age_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="Возраст:"
        android:textColor="@color/grey_lighter"/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/age_label"
        app:layout_constraintTop_toTopOf="@id/age_label"
        android:text="18"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textColor="@color/grey_lighter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пол:"
        app:layout_constraintLeft_toLeftOf="@id/age_label"
        app:layout_constraintTop_toBottomOf="@id/age_label"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue_dark"/>


    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        app:layout_constraintLeft_toLeftOf="@id/age"
        app:layout_constraintTop_toBottomOf="@id/age"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue_dark"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/obo_mne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обо мне"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/avatarka"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/blue_dark"
        />

    <TextView
        android:id="@+id/course_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/obo_mne"
        android:layout_margin="20dp"
        android:text="Курс "
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/course_label"
        app:layout_constraintTop_toBottomOf="@id/course_label"
        android:layout_marginTop="10dp"
        android:text="5 "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/univer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course"
        android:layout_margin="20dp"
        android:text="Университет "
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/univer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/course_label"
        app:layout_constraintTop_toBottomOf="@id/univer_label"
        android:layout_marginTop="10dp"
        android:text="ТГМУ "
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/faculty_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/univer"
        android:layout_margin="20dp"
        android:text="Факультет"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/faculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/course_label"
        app:layout_constraintTop_toBottomOf="@id/faculty_label"
        android:layout_marginTop="10dp"
        android:text="Медицинский"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/stipendiya_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faculty"
        android:layout_margin="20dp"
        android:text="Стипендия"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/stipendiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/course_label"
        app:layout_constraintTop_toBottomOf="@id/stipendiya_label"
        android:layout_marginTop="10dp"
        android:text="300 cм"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/predmeti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предметы"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/stipendiya"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/blue_dark"
        />

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:id="@+id/rv_subjects_detailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/predmeti"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/subject_item_detailed"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>